{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "strict": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "jsx": "react"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "docs",
    "examples"
  ],
}